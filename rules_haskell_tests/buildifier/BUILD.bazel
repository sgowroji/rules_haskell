load("@com_github_bazelbuild_buildtools//buildifier:def.bzl", "buildifier", "buildifier_test")
load("@os_info//:os_info.bzl", "is_nixos")

# Run this to check for errors in BUILD files.
buildifier(
    name = "buildifier",
    mode = "check",
)

# Run this to fix the errors in BUILD files.
buildifier(
    name = "buildifier-fix",
    mode = "fix",
    verbose = True,
)

buildifier_test(
    name = "buildifier_test",
    srcs = [
        "//:BUILD.bazel",
        "//:WORKSPACE",
        "//:non_module_deps.bzl",
        "//:non_module_deps_1.bzl",
        "//:non_module_deps_2.bzl",
        "//:non_module_deps_bzlmod.bzl",
        "//buildifier:all_files",
        "//tests:all_files",
    ],
    mode = "diff",

    # Buildifier does not work yet with bzlmod+nixos
    # See https://github.com/bazelbuild/bazel-gazelle/issues/1469
    tags = [
        "dont_test_on_windows",
    ] + (["manual"] if is_nixos else []),
)

filegroup(
    name = "all_files",
    testonly = True,
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
